<div class="row">
    <div class="col-md-10">
      <div class="row">
        <h1><u>Show Category</u></h1>
      </div>
      <br>
      <div class="row">
        <strong>Name :-</strong>
        <%= @category.name %>
      </div>
      <br>
      <div class="row">
        <strong>Parent :-</strong>
      <%= @category.parent_id %>
      </div>
      <br>
       <div class="row">
        <strong>Left :-</strong>
        <%= @category.lft %>
      </div>
      <br>
       <div class="row">
        <strong>Right :-</strong>
        <%= @category.rgt %>
      </div>
      <br>
        <div class="row ">
            <%= link_to edit_category_path(@category), class: 'btn btn-primary' do %>
            <i class="glyphicon glyphicon-pencil"></i> Edit <%end%>
            <%= link_to categories_path, class: 'btn btn-primary' do%><i class="glyphicon glyphicon-arrow-left"></i> Back <%end%>
        </div>
    </div>
    <div class="col-md-2">
    </div>
</div>
